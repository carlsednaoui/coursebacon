		<meta property="og:type" content="website" />
		<meta property="og:url" content="http://www.coursebacon.com" />
		<meta property="og:image" content="http://www.coursebacon.com/images/cpigs.png" />
		<meta property="og:site_name" content="CourseBacon" />
