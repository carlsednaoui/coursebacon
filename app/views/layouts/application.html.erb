		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<%= link_to "CourseBacon", "/", :class => "brand" %>
				<div class="nav-collapse pull-right">
					<ul class="nav">
						<li><%= link_to "Home", "/" %></li>
						<li><%= link_to "Courses", :controller => "courses" %></li>
						<li><%= link_to "Books", :controller => "books" %></li>
						<li><%= link_to "Tutorials", :controller => "tutorials" %></li>
						<li class="divider-vertical"></li>
						<% if current_user %>
							<li><%= link_to "Dashboard", "/dashboard" %></li>
							<li><%= link_to "Sign Out", signout_path %></li>
						<% else %>
							<li><%= link_to "Sign In", "/sign-up" %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>

