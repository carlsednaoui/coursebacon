<h1>Review</h1>

<p>
  <b>Course:</b>
  <%= link_to Course.find_by_id(@course_review.course_id).title, Course.find_by_id(@course_review.course_id) %>
</p>

<p>
<b>Course Recommended</b><br>
<% if @course_review.recommended.eql? true%>
Yes
<% else %>
No
<% end %>
</p>


<p>
  <b>Course review</b><br>
  <%= @course_review.review %>
</p>

<div class="form-actions">
  <%= link_to 'Back', course_reviews_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_course_review_path(@course_review), :class => 'btn' %>
  <%= link_to 'Delete', course_review_path(@course_review), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
