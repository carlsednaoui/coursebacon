<h1>Reviews You've Added to CourseBacon</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Review</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @course_reviews.each do |course_review| %>
			<tr>
				<td><%= link_to truncate(course_review.review, :length => 65), course_review_path(course_review) %></td>

				<td>
					<%= link_to 'Edit', edit_course_review_path(course_review), :class => 'btn btn-mini' %>
					<%= link_to 'Destroy', course_review_path(course_review), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Go To Dashboard", dashboard_path, :class => "btn btn-primary btn-large" %>
