<% content_for :title, "Online Books for Free - Explore our List of Free Online Books Today" %>
<% content_for :description, "CourseBacon brings you the best online books for free. Visit us today and start learning." %>
<h1>Free online books are only two clicks away</h1>
<br />
<table class="table table-striped">
	<thead>
		<tr class="big-table-header">
			<th class="span5"><%= sortable "title", "Book Title" %></th>
			<th class="span2"><%= sortable "url", "URL" %></th>
			<th class="span2"><%= sortable "main_topic", "Subject" %></th>
			<% if current_user %>
				<th class="span2"></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= link_to truncate(book.title , :length => 60), book_path(book) %></td>
				<td><%= link_to truncate(book.url , :length => 20), book_path(book) %></td>
				<td><%= link_to truncate(book.main_topic , :length => 20), book_path(book) %></td>
				<% if current_user %>
					<% if book.user == current_user %>
						<td>
							<%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-mini' %>
							<%= link_to 'Destroy', book_path(book), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
						</td>
					<% else %>
						<td><%= link_to truncate(book.url, :length => 25), book_path(book) %></td>
					<% end %>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<% if current_user %>
	<%= link_to 'Submit a Book', new_book_path, :class => 'btn btn-primary' %>
<% elsif %>
	<%= link_to 'Sign Up to Submit a Book', '/sign-up', :class => 'btn btn-primary' %>
<% end %>
<br />
<br />
<%= paginate @books %>
<br />
