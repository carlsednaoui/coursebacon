<h1>Review</h1>

<p>
  <b>Course:</b>
  <%= link_to Course.find_by_id(@review.course_id).title, Course.find_by_id(@review.course_id) %>
</p>

<p>
  <b>Course review</b><br>
  <%= @review.course_review %>
</p>

<div class="form-actions">
  <%= link_to 'Back', reviews_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_review_path(@review), :class => 'btn' %>
  <%= link_to 'Delete', review_path(@review), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
