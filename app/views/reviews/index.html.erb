<h1>Reviews</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Course</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= link_to review.course_id, review_path(review) %></td>
        <td><%= review.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_review_path(review), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', review_path(review), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_review_path, :class => 'btn btn-primary' %>
