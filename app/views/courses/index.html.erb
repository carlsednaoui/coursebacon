<table class="table table-striped">
	<thead>
		<tr class="big-table-header">
			<th class="span5"><%= sortable "title", "Course Title" %></th>
			<th class="span2"><%= sortable "offered_by", "Offered by" %></th>
			<th class="span2"><%= sortable "main_topic", "Subject" %></th>
			<% if current_user %>
			<th class="span2"></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
			<tr>
					<td><%= link_to truncate(course.title , :length => 60), course_path(course) %></td>
					<td><%= link_to truncate(course.offered_by , :length => 25), course_path(course) %></td>
					<td><%= link_to truncate(course.main_topic , :length => 25), course_path(course) %></td>

				<% if course.user == current_user %>
					<td>
						<%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-mini' %>
						<%= link_to 'Destroy', course_path(course), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
					</td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<% if current_user %>
	<% link_to 'Submit a Course', new_course_path, :class => 'btn btn-primary' %>
<% elsif %>
	<% link_to 'Sign Up to Submit a Course', '/sign-up', :class => 'btn btn-primary' %>
<% end %>
<br />
<%= paginate @courses %>
<br />
